-- QUESTION ONE
select avg("avg_number_of_trips") as "avg_number_of_trips_on_saturday"
from
	(select count("passenger_count") as "avg_number_of_trips", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
	from "yellow_tripdata_2015-01"
	group by "tpep_dropoff_datetime") as "days"
where "day_name" like 'Satur%';


-- QUESTION TWO
select avg("sum_of_fare_on_saturday") as "avg_fare_on_saturday"
from
	(select sum("fare_amount") as "sum_of_fare_on_saturday", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
	from "yellow_tripdata_2015-01"
	group by "tpep_dropoff_datetime") as "days"
where "day_name" like 'Satur%';


-- QUESTION THREE
select avg("time_diff") as "avg_duration_on_saturday"
from
	(select ("tpep_dropoff_datetime" - "tpep_pickup_datetime") as "time_diff", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
	from "yellow_tripdata_2015-01"
	group by "tpep_dropoff_datetime", "tpep_pickup_datetime") as "days"
where "day_name" like 'Satur%';


-- QUESTION FOUR
select avg("avg_number_of_trips") as "avg_number_of_trips_on_sunday"
from
	(select count("passenger_count") as "avg_number_of_trips", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
	from "yellow_tripdata_2015-01"
	group by "tpep_dropoff_datetime") as "days"
where "day_name" like 'Sund%';


-- QUESTION FIVE
select avg("sum_of_fare_on_sunday") as "avg_fare_on_sunday"
from
	(select sum("fare_amount") as "sum_of_fare_on_sunday", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
	from "yellow_tripdata_2015-01"
	group by "tpep_dropoff_datetime") as "days"
where "day_name" like 'Sund%';


-- QUESTION SIX
select avg("time_diff") as "avg_duration_on_sunday"
from
(select ("tpep_dropoff_datetime" - "tpep_pickup_datetime") as "time_diff", to_char("tpep_dropoff_datetime", 'Day') as "day_name"
  from "yellow_tripdata_2015-01"
  group by "tpep_dropoff_datetime", "tpep_pickup_datetime") as "days"
where "day_name" like 'Sund%';
